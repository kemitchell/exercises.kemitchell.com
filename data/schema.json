{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "type",
    "cues"
  ],
  "properties": {
    "todo": {
      "type": "boolean"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "enum": [
        "static",
        "dynamic"
      ]
    },
    "chain": {
      "enum": [
        "open",
        "closed"
      ]
    },
    "muscles": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "enum": [
              "biceps brachii",
              "biceps femoris",
              "brachialis",
              "brachioradialis",
              "coracobrachialis",
              "deltoid",
              "external oblique",
              "flexor digiti minimi brevis",
              "flexor digitorum profundus",
              "flexor digitorum superficialis",
              "flexor pollicis brevis",
              "flexor pollicis longus",
              "gluteus maximus",
              "hamstrings",
              "infraspinatus",
              "internal oblique",
              "latissimus dorsi",
              "levator scapulae",
              "pectoralis major",
              "pectoralis minor",
              "quadricpes",
              "rectus abdominis",
              "rhomboids",
              "semimembranosus",
              "semitendinosus",
              "teres major",
              "teres minor",
              "transverse abdominis",
              "trapezius",
              "triceps brachii"
            ]
          }
        }
      ]
    },
    "goal": {
      "type": "object",
      "properties": {
        "repetitions": {
          "type": "integer",
          "minimum": 1
        },
        "sets": {
          "type": "integer",
          "minimum": 1
        },
        "note": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "cues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z]+$"
      }
    },
    "alternatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "progressions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
